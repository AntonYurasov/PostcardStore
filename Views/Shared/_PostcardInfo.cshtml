@model Postcard

<div class="card pie-card">
    <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body pie-button">
        <h4 class="d-grid">
        </h4>

        <a class="btn btn-secondary" 
            asp-controller="ShoppingCart"
            asp-action="AddToShoppingCart"
            asp-route-postcardId="@Model.PostcardId">Add to your cart</a>

        <div class="d-flex justify-content-between mt-2">
            <h2 class="text-start">
                <a class="pie-link" asp-controller="Postcard" asp-action="Details" asp-route-id="@Model.PostcardId">@Model.Name</a>
            </h2>
            <h5 class="text-nowrap">
                @Model.Price.ToString("c")
            </h5>
        </div>
    </div>
</div>